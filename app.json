{
  "name": "Byrd Ticketing",
  "description": "Byrd Full-Stack code challenge",
  "keywords": ["byrd"],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": {
      "description": "Use the production configuration",
      "value": "ticketing.settings.prod"
    },
    "SECRET_KEY": {
      "description": "Assign a unique secret key",
      "generator": "secret"
    }
  }
}
